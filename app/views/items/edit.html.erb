<section class="container g-py-100">
    <div class="row justify-content-center">
        <div class="col-sm-10 col-md-9 col-lg-6">
            <div class="g-brd-around g-brd-gray-light-v4 rounded g-py-40 g-px-30">
            <header class="text-center mb-4">
                <h2 class="h2 g-color-black g-font-weight-600">Edit this page</h2>
            </header>

            <!-- Form -->
            <div class="g-py-15">
                <%= form_for @item do |f|%>

                <div class="mb-4">
                    <%= label_tag 'Name' %>
                    <%= f.text_field :title, class:"form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded g-py-15 g-px-15" %>
                </div>

                <div class="mb-4">
                    <%= label_tag 'Description' %>
                    <%= f.text_area :description, class:"form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded g-py-15 g-px-15" %>
                </div>

                <div class="mb-4">
                    <%= label_tag 'Price' %>
                    <%= f.number_field :price, min: 1, class:"form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded g-py-15 g-px-15" %>
                </div>

                <div class="mb-4 d-flex justify-content-center">
                    <%= f.file_field :image_url %>
                </div>
                <div class="mb-4 d-flex justify-content-center">
                    <%= f.submit "Modify picture", class: "btn u-btn-primary g-rounded-50 g-mr-10 g-mb-15" %>
                </div>
        
                <hr>
                <%= f.submit 'Validate', class:'btn btn-md btn-block u-btn-primary g-rounded-50 g-py-13 mb-4' %>
                <% end %>
            </div>
            <!-- End Form -->
            <%= link_to "Back", :back %>
            </div>
        </div>
    </div>
</section>
<!-- End Signup -->