<section class="container g-py-100">
    <div class="row justify-content-center">
        <div class="col-sm-10 col-md-9 col-lg-6">
            <div class="g-brd-around g-brd-gray-light-v4 rounded g-py-40 g-px-30">
            <header class="text-center mb-4">
                <h2 class="h2 g-color-black g-font-weight-600">Add a new kitty</h2>
            </header>

            <!-- Form -->
            <div class="g-py-15">
                <%= form_tag url_for(action: 'create'), method: "post" do%>

                <div class="mb-4">
                    <%= label_tag 'title' %>
                    <%= text_field_tag :title, @item.title, class:"form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded g-py-15 g-px-15", placeholder:"Name of the kitty" %>
                </div>

                <div class="mb-4">
                    <%= label_tag 'description' %>
                    <%= text_area_tag :description, @item.description, class:"form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded g-py-15 g-px-15", placeholder:"description" %>
                </div>

                <div class="mb-4">
                    <%= label_tag 'price' %>
                    <%= number_field_tag :price, @item.price, min: 1, class:"form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded g-py-15 g-px-15", placeholder:"price" %>
                </div>

                <div class="mb-4 d-flex justify-content-center">
                    <%= file_field_tag :image_url %>
                </div>
                <div class="mb-4 d-flex justify-content-center">
                    <%= submit_tag "Add picture", class: "btn u-btn-primary g-rounded-50 g-mr-10 g-mb-15" %>
                </div>
        
                <hr>
                <%= submit_tag 'Add this cat', class:'btn btn-md btn-block u-btn-primary g-rounded-50 g-py-13 mb-4' %>
                <% end %>
            </div>
            <!-- End Form -->
            <%= link_to "Back", :back %>
            </div>
        </div>
    </div>
</section>
<!-- End Signup -->