<section class="container g-py-100">
  <div class="row justify-content-center">
    <div class="col-sm-10 col-md-9 col-lg-6">
      <div class="g-brd-around g-brd-gray-light-v4 rounded g-py-40 g-px-30">
        <header class="text-center mb-4">
          <h2 class="h2 g-color-black g-font-weight-600">Edit your Profile</h2>
        </header>

        <div class="g-py-15">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="row">
            <div class="col-xs-12 col-sm-6 mb-4">
            <%= f.text_field :first_name, autofocus: true, class: "form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded g-py-15 g-px-15", placeholder: "John" %>
            </div>

            <div class="col-xs-12 col-sm-6 mb-4">
            <%= f.text_field :last_name, autofocus: true, class: "form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded g-py-15 g-px-15", placeholder: "Doe" %>
            </div>
          </div>

          <div class="mb-4">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded g-py-15 g-px-15", placeholder: "Email" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="mb-4">
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded g-py-15 g-px-15", placeholder: "New password (min. 6 characters)" %>
          </div>

          <div class="mb-4">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded g-py-15 g-px-15", placeholder: "Password confirmation" %>
          </div>

          <div class="mb-4">
            <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded g-py-15 g-px-15", placeholder: "Current password (mandatory to confirm)" %>
          </div>

          <div class="mb-4">
            <%= f.label :avatar, "Ajouter une photo de profil"%><br/>
            <%= f.file_field :avatar %>
          </div> 

          <div class="actions mt-5">
            <%= f.submit "Update", class: "btn btn-md btn-block u-btn-primary g-rounded-50 g-py-13 mb-4" %>
          </div>
        <% end %>
        </div>

        <br><hr>
        <h3>Cancel my account</h3>
        <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), class: "btn btn-md u-btn-outline-red g-mr-10 g-mb-15", data: { confirm: "Are you sure?" }, method: :delete %></p>
        <%= link_to "Back", :back %>
      </div>
    </div>
  </div>
</section>
