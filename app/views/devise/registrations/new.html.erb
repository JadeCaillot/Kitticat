
<!-- Signup -->
    <section class="container g-py-100">
      <div class="row justify-content-center">
        <div class="col-sm-10 col-md-9 col-lg-6">
          <div class="g-brd-around g-brd-gray-light-v4 rounded g-py-40 g-px-30">
            <header class="text-center mb-4">
              <h2 class="h2 g-color-black g-font-weight-600">Signup</h2>
            </header>

            <!-- Form -->
            <div class="g-py-15">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="row">
                <div class="col-xs-12 col-sm-6 mb-4">
                <%= f.text_field :first_name, autofocus: true, class: "form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded g-py-15 g-px-15", placeholder: "John" %>
                </div>

                <div class="col-xs-12 col-sm-6 mb-4">
                <%= f.text_field :last_name, autofocus: true, class: "form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded g-py-15 g-px-15", placeholder: "Doe" %>
                </div>
              </div>

              <div class="mb-4">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded g-py-15 g-px-15", placeholder: "johndoe@gmail.com" %>
              </div>

              <div class="row">
                <div class="col-xs-12 col-sm-6 mb-4"> 
                    <%= f.password_field :password, autocomplete: "new-password", class: "form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded g-py-15 g-px-15", placeholder: "Password (min. 6 characters)" %>
                </div>

                <div class="col-xs-12 col-sm-6 mb-4">
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded g-py-15 g-px-15",  placeholder: "Password confirmation" %>
                </div>
              </div>
              <br>
              <%= f.submit "Signup", class: "btn btn-md btn-block u-btn-primary g-rounded-50 g-py-13 mb-4" %>
              <% end %>
            </div>
            <!-- End Form -->
            <footer class="text-center">
              <p class="g-color-gray-dark-v5 g-font-size-13 mb-0">Already have an account? <a class="g-font-weight-600" href="page-signup3.html"><%= render "devise/shared/links" %></a>
              </p>
            </footer>
          </div>
        </div>
      </div>
    </section>
    <!-- End Signup -->