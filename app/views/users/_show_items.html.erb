<tr class="g-brd-bottom g-brd-gray-light-v3">
    <td class="text-left g-py-25">
    <%if item.picture.attached?%>
      <%= image_tag item.picture, alt: 'picture', class: "d-inline-block g-width-100 mr-4" %>
    <%else%>
        <img class="d-inline-block g-width-100 mr-4" src="<%=item.image_url%>" alt="Image Description">
    <%end%>
        <div class="d-inline-block align-middle">
            <h4 class="h6 g-color-black"> <%=item.title%></h4>
            <ul class="list-unstyled g-color-gray-dark-v4 g-font-size-12 g-line-height-1_6 mb-0">
                <li><%=item.price%> â‚¬</li>
            </ul>
        </div>
    </td>
    <td>
        <span class="g-color-gray-dark-v4 g-color-black--hover g-cursor-pointer">
            <%= link_to edit_item_path(item.id), class:"g-color-gray-dark-v5 g-color-primary--hover g-text-underline--none--hover" do %> 
            <i class="mt-auto fas fa-edit g-color-primary"></i>
            <% end %>
        </span>
    </td>
    <td>
        <span class="g-color-gray-dark-v4 g-color-black--hover g-cursor-pointer">
            <%= link_to item_path(item.id), {"method" => "delete"} , class:"g-color-gray-dark-v5 g-color-primary--hover g-text-underline--none--hover" do %> 
            <i class="mt-auto fa fa-trash g-color-black"></i>
            <% end %>
    </span>
    </td>
</tr>

